angular_capsule_app = angular.module("AngularCapsuleApp", 
		[
		"ngRoute",
		"ngCookies",
		"ngTouch",
		"infinite-scroll"
		]);

angular_capsule_app.config(["$routeProvider", function($routeProvider) {
	$routeProvider
		.when("/", {
			controller: "CapsuleCtlr",
			templateUrl: "<%= asset_path 'angular_capsule/capsule.html' %>"
		})
		.when("/albumcreator", {
			controller: "CustomOrderCtrl",
			templateUrl: "<%= asset_path 'angular_capsule/custom_order.html' %>"
		})
		.when("/coverphoto", {
			controller: "CoverPhotoCtrl",
			templateUrl: "<%= asset_path 'angular_capsule/cover_photo.html' %>"
		})
		.when("/photo/:postId", {
			controller: "PostCtrl",
			templateUrl: "<%= asset_path 'angular_capsule/post.html' %>"
		})
		.when("/slideshowchooser", {
			controller: "SlideshowChooserCtrl",
			templateUrl: "<%= asset_path 'angular_capsule/slideshow_chooser.html' %>"
		})
		.when("/slideshow", {
			controller: "SlideshowCtrl",
			templateUrl: "<%= asset_path 'angular_capsule/slideshow.html' %>"
		})
		.when("/slideshow/:view", {
			controller: "SlideshowCtrl",
			templateUrl: "<%= asset_path 'angular_capsule/slideshow.html' %>"
		})
		.otherwise({
			redirectTo: "/"
		});
}]);
