angular_capsule_app = angular.module("AngularCapsuleApp", 
		[
		"ngRoute",
		"ngTouch",
		"infinite-scroll"
		]);

angular_capsule_app.config(["$routeProvider", function($routeProvider) {
	$routeProvider
		.when("/", {
			controller: "CapsuleCtlr",
			templateUrl: "<%= asset_path 'angular_capsule/capsule.html' %>"
		})
		.when("/photo/:postId", {
			controller: "PostCtrl",
			templateUrl: "<%= asset_path 'angular_capsule/post.html' %>"
		})
		.when("/slideshow", {
			controller: "SlideshowCtrl",
			templateUrl: "<%= asset_path 'angular_capsule/slideshow.html' %>"
		})
		.when("/slideshow_b", {
			controller: "SlideshowCtrl",
			templateUrl: "<%= asset_path 'angular_capsule/slideshow_b.html' %>"
		})
		.when("/slideshow_c", {
			controller: "SlideshowCtrl",
			templateUrl: "<%= asset_path 'angular_capsule/slideshow_c.html' %>"
		})
		.when("/slideshow_d", {
			controller: "SlideshowCtrl",
			templateUrl: "<%= asset_path 'angular_capsule/slideshow_d.html' %>"
		})
		.when("/slideshow_e", {
			controller: "AltSlideshowCtrl",
			templateUrl: "<%= asset_path 'angular_capsule/slideshow_e.html' %>"
		})
		.when("/slideshow_f", {
			controller: "AltSlideshowCtrl",
			templateUrl: "<%= asset_path 'angular_capsule/slideshow_f.html' %>"
		})
		.otherwise({
			redirectTo: "/"
		});
}]);
