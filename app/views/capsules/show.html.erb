
<div class="row">
	<div class="small-5 columns">
		<% if current_user && (current_user.admin? || capsule_owner(current_user.id, @capsule.id)) %>
			<% engine_button = @capsule.email.blank? ? "small disabled" : "small" %>
			<button id="start_jobs" class=<%=  "#{engine_button}" %> data-width="200px" data-tooltip class="has-tip" title="Press this button to start fetching recently submited photos automatically. Runs until you stop it.">Start Email Engine</button>
			<button id="stop_jobs" style="display: none;" class="small" data-width="200px" data-tooltip class="has-tip" title="Press this button to stop fetching photos automatically.">Stop Email Engine</button>
			<%= link_to "Start Slideshow", slideshow_path(capsule_id: @capsule.id), class: 'button small' %>
			<span style="display:none;"><%= button_to "Get Pics", retrieve_emails_path, id: "get_emails_button", remote:true %></span>
		<% end %>
		<% the_date = @capsule.event_date ? @capsule.event_date.to_s(:long) : "Not Available" %>
		<h4 class="subheader"><%= @capsule.name %> <br><small>Event Date: <%= @capsule.event_date.nil? ? "Not Available" : the_date %></small></h4>
	</div>
	<div class="small-7 columns">
		<% if current_user && current_user.admin? %>
			<ul class="inline-list">
				<% button_classes = @capsule.email.blank? ? 'button small disabled' : 'button small' %>				
				<li><%= button_to "Get Pics", retrieve_emails_path, class: "#{button_classes}", id: "get_emails_button", remote:true %></li>
				<li><%= link_to "Edit Capsule", edit_capsule_path(@capsule), class: 'button small' %></li>
				<li><%= link_to "Add a Key Contributor", new_contributor_path(capsule_id: @capsule.id), class: 'button small' %></li>
			</ul>	
		<% end %>
	</div>
</div>


<div class="row">
	<div class="small-12 columns">
		<div class="row">
			<div class="small-2 columns">
				<h6 class="subheader">Pictures</h6>
			</div>
			<div class="small-10 columns">
				<%= link_to "Upload a Photo", new_post_path(capsule_id: @capsule.id ), class: 'button tiny' %>
			</div>
		</div>
		<span style="display: none;"><%= link_to "Reload Photos", reload_path(id: @capsule.id), remote: true, id: 'reload_button' %></span>
		<div id="masonryContainer">
			<div id="original_container">
				<%= render 'posts', capsule: @capsule %>
			</div>
			<div id="reload_container">
			</div>
		</div>
	</div>
