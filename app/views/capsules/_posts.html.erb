<% capsule.posts.order("created_at DESC").each do |post| %>
	<div class="masonry-brick">
		<div class="panel">
			<% if !post.image.blank? %>
				<%= link_to image_tag(post.image.url(:medium)), post.image.url, data: { colorbox: true, colorbox_photo: true, colorbox_height: "500px" } %>
			<% else %>
				<p><%= post.body %></p>
			<% end %>
			<!-- <h4><small><%= post.email %>	|  <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure?" } %></small></h4> -->
		</div>
	</div>
<% end %>
