<div class="row">
	<div class="small-8 small-centered columns" id="thank_you_logo">
		<%= link_to image_tag("logo.png", width: '450px'), self.send(resolve_logo_route) %>
	</div>
</div>
<div class="row">
	<div class="small-10 small-centered columns">
		<% flash.each do |key, value| %>
			<% alert_class = key == :error ? :alert : key %>
			<div data-alert class="alert-box <%= alert_class %>">
				<p class="subheader"><%= value %></p>
				<a href="#" class="close">x</a>
			</div>
		<% end %>
		
	</div>
</div>
<div class="row" style="margin-bottom:40px;">
	<div id="opt_in_modal" class="xlarge opt_in_modal">

	  <header class="section_header">
	    <h2>Order Your Capsule</h2>
	    <hr>
			<blockquote style="border-left:none;">"The [Capstory] live photo stream really helped pull the whole event together!"<cite> Amanda R. | Bride</cite></blockquote>
	  </header>
	    
	    <div class="opt_in_form">
				<%= form_for @access_request do |f| %>
					<div class="opt_in_left">
						<%= f.label :name %>
						<%= f.text_field :name, id: "contact_name" %>

						<%= f.label :email %>
						<%= f.text_field :email, id: "contact_email" %>
					</div>
				</div>
				<div class="opt_in_right">
					<div id="partner_code">
						<label for="access_request_partner_code">Coupon Code</label>
						<%= f.text_field :partner_code %>
						<small>If you received a code from one of our Social Media pages, enter it above.</small>
					</div>
					<div class="pull-right">
						<button class="btn btn_secondary btn_submit" action="submit">Order Capsule</button>
						<p class=""><small>100% Money back Guarantee - no questions asked.</small></p>
					</div>
				</div>

				<%= f.hidden_field :test_program_phaseline, value: "3" %>
			<% end %>
	    </div> <!-- /opt-in-form -->
	</div>
</div>
