	.social_links {
		width: 100%;
		font-size: .1px;
		text-align: justify;
		display: inline-block; }

	.social_links:after {
		content: "";
		width: 100%; }

	.social_links li {
		display: inline-block;
		font-size: 130em;
		text-align: center;
		width: 20%;
		margin-left: 10px;
		margin-bottom: 1.23077em; }

	.social_links li a {
		margin: 0 auto;
		display: block;
		text-indent: -9999px;
		width: 2.92308em;
		height: 2.92308em; }

	.social_links li a:hover {
		text-decoration: none; }

	.social_links li.twitter a {
		background: transparent url(<%= asset_path "homepage/img-twitter.png" %>) no-repeat center;
		background-size: contain; }

	.social_links li.facebook a {
		background: transparent url(<%= asset_path "homepage/img-twitter.png" %>) no-repeat center;
		background-size: contain; }

	.social_links li.instagram a {
		background: transparent url(<%= asset_path "homepage/img-twitter.png" %>) no-repeat center;
		background-size: contain; }

	.social_links li.vimeo a {
		background: transparent url(<%= asset_path "homepage/img-twitter.png" %>) no-repeat center;
		background-size: contain; }

	.social_links li.pinterest a {
		background: transparent url(<%= asset_path "homepage/img-twitter.png" %>) no-repeat center;
		background-size: contain; }

	.social_links li.facebook a {
		background: transparent url(<%= asset_path "homepage/img-facebook.png" %>) no-repeat center;
		background-size: contain; }
</style>
<div class="row">
	<div class="small-8 small-centered columns" id="thank_you_logo">
		<%= link_to image_tag("logo.png", width: '450px'), self.send(resolve_logo_route) %>
	</div>
</div>
<div class="row">
	<div class="small-10 small-centered columns">
		<% flash.each do |key, value| %>
			<% alert_class = key == :error ? :alert : key %>
			<div data-alert class="alert-box <%= alert_class %>">
				<p class="subheader"><%= value %></p>
				<a href="#" class="close">x</a>
			</div>
		<% end %>
		
	</div>
</div>
<div class="row" style="margin-top:60px;">
	<div class="small-12 small-centered columns">
		<h2 style="color:#c49a55;text-align:center;">
			Order Your Capsule
		</h2>
		<hr>
		<blockquote style="border-left:none;text-align:center;">"The [Capstory] live photo stream really helped pull the whole event together!"<cite> Amanda R. | Bride</cite></blockquote>
	</div>
</div>
<div class="row">
	<%= form_for @access_request do |f| %>
		<div class="small-12 small-centered medium-6 medium-centered columns">
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>	

			<%= f.label :partner_code, "Coupon Code" %>
			<%= f.text_field :partner_code %>
			<p><small>If you received a code from one of our social media pages, enter it above.</small></p>
			<br>
			<%= f.submit "Order Capsule", class: "button expand" %>
			<br>
			<p><small>100% Money back guarantee - no questions asked</small></p>

			<%= f.hidden_field :test_program_phaseline, value: "3" %>
		</div>
	<% end %>
</div>
