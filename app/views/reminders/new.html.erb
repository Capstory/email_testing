<%= form_for @reminder, html: { id: "reminder_form", class: "custom" } do |f| %>
	<div class="row">
		<div class="small-8 small-centered columns">
				<div class="error_messages">
					<% if @reminder.errors.any? %>
				     <h4 class="subheader"><%= pluralize(@reminder.errors.count, "error") %> prevented your request from being saved:</h4>
			      <ul>
				      <% @reminder.errors.full_messages.each do |msg| %>
				        <li><%= msg %></li>
				      <% end %>
			      </ul>
				  <% end %>
				</div>
		</div>
	</div>
	<div class="row">
		<div class="small-12 columns">
  		<h3 class="subheader">Tell us when you want us to send you a reminder email</h3>
		</div>
	</div>
	<div class="row">
		<div class="small-6 columns">
			<%= f.label :email %>

			<%= f.text_field :email, id:'reminder_email', placeholder: "you@domain.com" %>
		</div>
		<div class="small-6 columns">
			<%= f.label :date, "When should we email you?" %>

			<%= f.select :date, options_for_select([["in 3 days", "3_days"], ["in 1 week", "1_week"], ["in 2 weeks", "2_weeks"], ["in 1 month", "1_month"], ["in 2 months", "2_months"]]), id: 'reminder_date' %>
		</div>
	</div>
	<div class="row">
		<div class="small-12 columns">
			<%= f.submit "Submit", class: 'button pull-right' %>
		</div>
	</div>
<% end %>