<div class="row">
	<div class="small-6 columns">
		<h4 class="subheader">
			All Vendors<br>
			<small>
				Below are all the active vendors in the system. You can create a new one if you need to by clicking on the button on the right. 
			</small>
		</h4>
	</div>	
	<div class="small-6 columns">
		<%= link_to "Add a New Vendor", new_vendor_path, class: "button" %>
	</div>
</div>
<table>
	<thead>
		<tr>
			<th width="200">Name</th>
			<th>Email</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% vendors.each do |vendor| %>
			<tr>
				<td><%= link_to vendor.name, vendor %></td>
				<td><%= vendor.email %></td>
				<td>|</td>
				<td><%= link_to "Edit", edit_vendor_path(vendor) %></td>
				<td><%= link_to "Delete", vendor_path(vendor), method: :delete, data: { confirm: "Are you sure?" } %></td>				
			</tr>
		<% end %>
	</tbody>
</table>
