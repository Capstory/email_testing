<div class="row">
	<div class="small-6 columns">
		<h4 class="subheader">
			Admin Users<br>
			<small>
				Below are all the Admin users in the system. You can create a new one if you need to by clicking
				on the button to the right.
			</small>
		</h4>
	</div>	
	<div class="small-6 columns">
		<%= link_to "Add a New Admin", new_admin_path, class: "button" %>
	</div>
</div>
<table>
	<thead>
		<tr>
			<th width="200">Name</th>
			<th>Email</th>
			<th>Date Created</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% admins.each do |admin| %>
			<tr>
				<td><%= link_to admin.name, admin %></td>
				<td><%= admin.email %></td>
				<td><%= admin.created_at.to_formatted_s(:short) %></td>
				<td>|</td>
				<% unless admin.authorizations.empty? %>
					<td><small>Login Data Exists</small></td>
				<% else %>
					<td><%= link_to "Generate Login", new_authorization_path(id: admin.id) %></td>
				<% end %>
				<td><%= link_to "Edit", edit_admin_path(admin) %></td>
				<td><%= link_to "Delete", admin, method: :delete, data: { confirm: "Are you sure?" } %></td>
			</tr>
		<% end %>
	</tbody>
</table>