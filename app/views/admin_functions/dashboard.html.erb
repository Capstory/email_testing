<div class="row">
	<blockquote>Amateurs sit and wait for inspiration, the rest of us just get up and go to work.<cite>Stephen King</cite></blockquote>
</div>
<hr>
<div class="row">
	<div class="small-6 columns">
		<%= link_to "Add Vendor Customer", "#", class: "button expand", data: { reveal_id: "vendor_selection_modal" } %>	
	</div>
	<div class="small-6 columns">
		<%= link_to "Add Direct Customer", customer_new_path, class: "button expand" %>	
	</div>
</div>
<div class="row">
	<div class="small-3 columns">
		<ul class="no-bullet">
			<li><%= link_to "Capsules", "#", class: "admin_links", id: "show_capsules" %></li>
			<li><%= link_to "Encapsulations", "#", class: "admin_links", id: "show_encapsulations" %></li>
			<li><%= link_to "Clients", "#", class: "admin_links", id: "show_clients" %></li>
			<li><%= link_to "Admins", "#", class: "admin_links", id: "show_admins" %></li>
			<li><%= link_to "All Users", "#", class: "admin_links", id: "show_users" %></li>
			<li><%= link_to "Access Request", "#", class: "admin_links", id: "show_access_requests" %></li>
			<li><%= link_to "Authorizations", "#", class: "admin_links", id: "show_authorizations" %></li>
			<li><%= link_to "Vendor", "#", class: "admin_links", id: "show_vendors" %></li>
			<li><%= link_to "Vendor Pages", "#", class: "admin_links", id: "show_vendor_pages" %></li>
		</ul>
	</div>
	<div class="small-9 columns">
		<div id="show_capsules_data" class="data_partial">
			<%= render "admin_capsules", capsules: @capsules %>
		</div>
		<div id="show_clients_data" style="display:none;" class="data_partial">
			<%= render "admin_clients", clients: @clients %>
		</div>	
		<div id="show_users_data" style="display:none;" class="data_partial">
			<%= render "admin_users", users: @users %>
		</div>
		<div id="show_admins_data" style="display:none;" class="data_partial">
			<%= render "admin_admins", admins: @admins %>
		</div>
		<div id="show_access_requests_data" style="display:none;" class="data_partial">
			<%= render "admin_access_requests", access_requests: @access_requests %>
		</div>
		<div id="show_authorizations_data" style="display:none;" class="data_partial">
			<%= render "admin_authorizations", authorizations: @authorizations %>
		</div>
		<div id="show_encapsulations_data" style="display:none;" class="data_partial">
			<%= render "admin_encapsulations", encapsulations: @encapsulations %>
		</div>
		<div id="show_vendor_pages_data" style="display:none;" class="data_partial">
			<%= render "admin_vendor_pages", vendor_pages: @vendor_pages %>
		</div>
		<div id="show_vendors_data" style="display:none;" class="data_partial">
			<%= render "admin_vendors", vendors: @vendors %>
		</div>
	</div>
</div>

<div id="vendor_selection_modal" class="reveal-modal" data-reveal>
	<h2>Please Choose a Vendor</h2>
	<% @vendors.each do |vendor| %>
		<div class="panel">
			<div class="row">
				<div class="small-6 columns">
					<h3>Vendor Name: <%= vendor.name %></h3>
				</div>
				<div class="small-6 columns">
					<%= link_to "Add Client", customer_new_path(vendor_id: vendor.id), class: "button expand" %>
				</div>
			</div>
		</div>
	<% end %>
</div>
