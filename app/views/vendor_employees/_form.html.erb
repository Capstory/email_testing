<%= form_for(vendor_employee) do |f| %>
	<p>
		Please enter the salesperson's first name only. The address for the salesperson's page will automatically be generated.
	</p>
	<%= f.label :name %>
	<div class="row">
		<div class="large-4 columns">
			<p>URL: <%= vendor.named_url %>-</p>
		</div>
		<div class="large-8 columns">
			<%= f.text_field :name %>
		</div>
	</div>
	
	<%= f.label :email %>
	<%= f.text_field :email %>
	
	<%= f.label :phone %>
	<%= f.text_field :phone %>
	
	<%= f.label :partner_code %>
	<%= f.text_field :partner_code %>
	
	<%= f.hidden_field :vendor_id, value: vendor.id %>
	
	<%= link_to "Go to Vendor", vendor, class: 'button' %>
	<%= link_to "Back to Dashboard", dashboard_path, class: 'button' %>
	<%= f.submit "Submit", class: 'button' %>
<% end %>