    .content_section {
      padding: 3.75em 0 3.75em;
      overflow: hidden;
      *zoom: 1; 
    }

    body.home .background_wrapper .introcontent .intro h1 {
      color: white;
      font-weight: 300;
      font-style: normal;
      padding-bottom: 20px; 
    }

    body.home .background_wrapper .introcontent .intro .btn {
      color: white;
      border-color: white;
      display: block;
      text-align: center;
      margin-bottom: 10px;
      background-color: #c49a55;
      -webkit-transition: all 0.3s ease-in-out;
      -moz-transition: all 0.3s ease-in-out;
      -o-transition: all 0.3s ease-in-out;
      transition: all 0.3s ease-in-out; 
    }

    body.home .background_wrapper .introcontent .intro .btn:hover {
      background: white;
      color: #c49a55;
      border: 1px solid #c49a55; 
    }

    .section_header {
      text-align: center;
      margin-bottom: 4em; 
    }

    .section_header h2, .section_header h3 {
      text-transform: uppercase; 
    }

    .section_header h2 {
      color: #c49a55;
      font-size: 2em; 
