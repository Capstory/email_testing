<div class="masonry-brick">
	<%= div_for post, data: { id: post.id } do %>
		<% if post.body.nil? || post.body.upcase == "NO MESSAGE" %>
			<%= link_to image_tag(post.image.url(:medium)), post.image.url, data: { colorbox: true, colorbox_photo: true, colorbox_height: "600px" } %>
		<% else %>
			<blockquote><%= post.body %></blockquote>
		<% end %>
	<% end %>
</div>